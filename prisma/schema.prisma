// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  password    String
  name        String
  Collections Collection[]
  Comments    Comments[]
}

model Collection {
  id          String     @id @default(uuid())
  User        User       @relation(fields: [userId], references: [id])
  userId      String
  description String?
  title       String
  comments    Comments[]
  Nfts        Nft[]
  isPublic    Boolean    @default(false)
}

model Comments {
  id           String     @id @default(uuid())
  rating       Int
  text         String?
  User         User       @relation(fields: [userId], references: [id])
  userId       String
  Collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
}

model Nft {
  id           String     @id @default(uuid())
  tokenId      String
  tokenAddress String
  name         String
  tokenHash    String
  tokenUri      String?
  Collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
}
